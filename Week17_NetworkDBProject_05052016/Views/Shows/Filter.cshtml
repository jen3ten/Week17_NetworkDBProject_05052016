@model IEnumerable<Week17_NetworkDBProject_05052016.Models.Show>

@{
    ViewBag.Title = "Filter";
}

@{
    string filter = ViewBag.Message;
    switch (filter)
    {
        case "Network":
            <h2 class="page-title">@Model.First().Network.Name TV Shows</h2>
            break;
        @*case "Genre":
            <h2 class="page-title">Genre</h2>
            break;
        case "Rating":
            <h2 class="page-title">Rating</h2>
            break;*@
        case "Comedy":
            <h2 class="page-title">TV Comedies</h2>
            break;
        case "Drama":
            <h2 class="page-title">TV Dramas</h2>
            break;
        default:
            <h2 class="page-title">TV Shows that Contain "@filter"</h2>
            break;
    }
}

@*<h2 class="page-title">@Model.First().Network.Name TV Shows</h2>
<h2 class="page-title">@ViewBag.Message</h2>*@

<p class="link-format">
    @Html.ActionLink("Show Me All TV Shows", "Index", "Shows")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Network.Name)
        </th>
        <th></th>
    </tr>

@if (Model.Count() == 0)
{
    <tr>
        <td colspan="3">No shows match search</td>
    </tr>
}

else
{
    foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <div class="row">
                    <div class="col-xs-10 col-md-6">
                        <a href="@Html.DisplayFor(modelItem => item.Website)" target="_blank">
                            <img src="@Html.DisplayFor(modelItem => item.Photo)" class="img-thumbnail" alt="Show Photo">
                        </a>
                    </div>
                </div>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Network.Name)
            </td>
        </tr>
    }
}

</table>
